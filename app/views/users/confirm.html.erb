<h1>Sign Up Confirmation</h1>

<h3>Are you sure these values are correct?</h3>

<p>Email: <%= @user.email %></p>
<p>Name: <%= @user.name %></p>
 <%= csrf_meta_tags %>

 <div class="row">
  <div class="col-md-4", style="width: auto;">
    <%= button_to "Yes", {controller: "users", action: "create", params: params.to_unsafe_h.merge(name: @user.name, email: @user.email, password: @user.password, password_confirmation: @user.password_confirmation)}, class: 'btn btn-success'  %>
  </div>
  <div class="col-md-4", style="width: auto;">
    <%= button_to "No", {controller: "users", action: "new"}, class: 'btn btn-failure', :method => :get  %>
 </div>
</div>
